// User function template for C++
class Solution {
  public:
    // Function returns the second
    // largest elements
    
    int print2largest(vector<int> &arr) {
        int n = arr.size();
        
        int largest = arr[0];
        int slargest = arr[-1];
        
        for(int i=1;i<n;i++){
            if(arr[i]>largest){
                slargest=largest;
                largest=arr[i];
            }
            
            else if(arr[i]<largest && arr[i]>slargest){
                slargest=arr[i];
            }
        }
        
        return slargest;
    }
};